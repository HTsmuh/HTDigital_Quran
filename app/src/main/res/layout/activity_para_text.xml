<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_surah_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait"
    tools:context="com.example.hp.digitalquran.ParaText">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paratextlist"
        android:visibility="invisible"
        android:padding="30dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/bismillah2"/>
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/quran_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ٱلْحَمْدُ لِلَّهِ رَبِّ ٱلْعَٰلَمِينَ"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeightSmall" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/listen"
            android:layout_height="25dp"
            android:background="#6a000000"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="LISTEN PARA"
            android:textColor="@color/colorBackground"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/translate"
            android:layout_height="25dp"
            android:background="#6a000000"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="SHOW TRANSLATION"
            android:textColor="@color/colorBackground"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>
